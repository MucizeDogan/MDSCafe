@model RegisterDto
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/site2.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <h1>Kayıt Ol</h1>
        <form method="post">
            @if (ViewBag.Errors != null)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <input type="text" id="full-name" asp-for="Name" class="form-control" placeholder="Adınız" required>
            <input type="text" id="full-name" asp-for="Surname" class="form-control" placeholder="Soyadınız" required>
            <input type="text" id="full-name" asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız" required>
            <input type="text" id="your-email" asp-for="Mail" class="form-control" placeholder="Email Adresiniz" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
            <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Şifreniz" required>
            
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>

        @* <div class="password-policy mt-3">
