        <script type="text/javascript">

            $(document).ready(() => {

                var conn = new signalR.HubConnectionBuilder().withUrl("https://localhost:7052/SignalRHub").build();
                $("#connstatus").text(conn.state);

                conn.start().then(() => {
                    $("#connstatus").text(conn.state);
                    //Set Interval metodu bizim sayfayı yenilemeden verilerimizin güncellemesini sağlayacak
                    setInterval(() => { // SetInterval metodu bir aralık ayarlayacak, Bağlantıyı belli periyotlara düşürecek
                        conn.invoke("SendStatistics"); //Conn.invoke ile SendCategoryCount metoduna istekte bulunduk
                        
                        
                    }, 1000);   //Her 1 saniyede bir istekte bulunacak

                }).catch((err) => { console.log(err) });

                conn.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                })

                conn.on("ReceiveProductCount", (value2) => {
                    $("#productcount").text(value2);
                })

                conn.on("ReceiveActiveCategeryCount", (value3) => {
                    $("#activecategorycount").text(value3);
                })

                conn.on("ReceivePasiveCategeryCount", (value4) => {
                    $("#pasivecategorycount").text(value4);
                })

                conn.on("ReceiveProductCountByCategoryNameHamburger", (value5) => {
                    $("#productcountbycategorynamehamburgercount").text(value5);
                })

                conn.on("ReceiveProductCountByCategoryNameDrink", (value6) => {
                    $("#receiveproductcountbycategorynamedrink").text(value6);
                })

                conn.on("ReceiveProductPriceAvg", (value7) => {
                    $("#receiveproductpriceavg").text(value7);
                })

                conn.on("ReceiveProductNameByPriceHighest", (value8) => {
                    $("#receiveproductnamebypricehighest").text(value8);
                })
            });

        </script>


