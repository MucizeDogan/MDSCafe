    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage)) {
            <text>
                swal("Rezervasyon başarıyla oluşturuldu.", "@Html.Raw(ViewBag.SuccessMessage)", "success");
            </text>
        } else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage)) {
            <text>
                swal("Rezervasyon sırasında bir hata oluştu.", "@Html.Raw(ViewBag.ErrorMessage)", "error");
            </text>
        }
    </script>

    

</body>

</html>
