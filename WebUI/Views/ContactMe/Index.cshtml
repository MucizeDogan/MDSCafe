@model List<ResultContactMeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Alt İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            Sadece 1 tane iletişim alanı oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>@item.ContactMeID</td>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td><a href="/ContactMe/DeleteContactMe/@item.ContactMeID" class="btn btn-outline-danger btn-rounded"
                                        onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td><a href="/ContactMe/UpdateContactMe/@item.ContactMeID" class="btn btn-outline-warning btn rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/ContactMe/CreateContactMe/" class="btn btn-outline-primary">Yeni İletişim Bilgisi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

