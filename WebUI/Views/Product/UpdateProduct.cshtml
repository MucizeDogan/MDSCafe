@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelleme</div>
                        </div>
                        <input type="hidden" asp-for="ProductID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Productname">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="Productname" placeholder="Ürün Adı">
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı</label>
                                <input type="number" class="form-control" asp-for="Price" id="price" placeholder="Ürün Fiyatı">
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="imageUrl">Ürün Görseli</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Ürün Görseli">
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Ürün Kategorisi</label>
                                @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.v, new {@class="form-control"}) 
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="description">Ürün Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Description" id="description" placeholder="Ürün Açıklaması">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success btn-rounded">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

