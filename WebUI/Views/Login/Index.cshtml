@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 100%;
            max-width: 360px;
            background: white;
            border: 1px solid #e3e3e3;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .login-container h1 {
                font-size: 1.5rem;
                margin-bottom: 24px;
                color: #333;
            }

        .form-control {
            margin-bottom: 16px;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #d1d1d1;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #10a37f;
            border: none;
            color: white;
            padding: 12px;
            font-size: 14px;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0e8c6b;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Giriş Yap</h1>
        <form method="post">
            @if (ViewBag.ErrorMessage != null) {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <input type="text" class="form-control" placeholder="Kullanıcı Adı"  asp-for="Username" required>
            <input type="password" class="form-control" placeholder="Şifre" asp-for="Password" required>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>
</body>
</html>