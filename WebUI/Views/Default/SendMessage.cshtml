@model CreateMessageDto
<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Ulaşın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="NameSurname" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Konu" asp-for="Subject" />
                        </div>
                        <div>
                            <textarea placeholder="Mesajınız..." asp-for="MessageContent" rows="10"  class="form-control"></textarea>
                        </div>
                        
                        <div class="btn_box">
                            <button>
                                Mesaj Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                   @*  SQL'deki = https://www.google.com/maps/place/Hilal+D%C3%B6ner/@38.7572679,30.5419575,17z/data=!3m1!4b1!4m6!3m5!1s0x14cf17cfe845aafd:0x925f611518cf20cb!8m2!3d38.7572679!4d30.5419575!16s%2Fg%2F11b75kx272?entry=ttu&g_ep=EgoyMDI0MTExMy4xIKXMDSoASAFQAw%3D%3D *@

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3111.2804101079623!2d30.53938257644718!3d38.75727205495925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cf17cfe845aafd%3A0x925f611518cf20cb!2sHilal%20D%C3%B6ner!5e0!3m2!1str!2str!4v1734962372546!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage)) {
            <text>
                swal("@Html.Raw(ViewBag.SuccessMessage).", "", "success");
            </text>
        } else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage)) {
            <text>
                swal("@Html.Raw(ViewBag.ErrorMessage)", "", "error");
            </text>
        }
    </script>
</section>
<!-- end book section -->
