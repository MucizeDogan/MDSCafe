@model List<ResultCafeTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Masalar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Masa Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <th>@item.Name</th>
                                        <td>@item.Status</td>
                                        <td>
                                            <a href="/CafeTables/DeleteCafeTable/@item.CafeTableID" class="btn btn-outline-danger btn-rounded"
                                               onclick="return confirm('@item.Name bu Masayı silmek istediğinize emin misiniz?')">Sil</a>
                                        </td>
                                        <td><a href="/CafeTables/UpdateCafeTable/@item.CafeTableID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/CafeTables/CreateCafeTable/" class="btn btn-outline-primary">Yeni Masa</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

