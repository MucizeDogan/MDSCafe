@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    string Durum = "";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İnidirimler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimli Ürünleri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            Tema bütünlüğü için sadece <strong>2 adet</strong> İndirimli Ürünü Aktif olarak seçiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>
                                            @if (@item.Status == true) {
                                                Durum = "Aktif";
                                            }else {
                                                Durum = "Pasif";   
                                            }
                                            @Durum
                                        </td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger btn-rounded"
                                        onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
                                        <td><a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-success btn-rounded">Aktif</a></td>
                                        <td><a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-dark btn-rounded">Pasif</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirim Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

